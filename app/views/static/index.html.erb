<main class="main-container">
  <section class="main-content">
    <figure class="logo-container">
      <figure class="the-logo">
        <div class="eye">
          <div class="blink"></div>
          <div class="blink"></div>
        </div>
        <div class="mouth"></div>
        <div class="ball"></div>
        <%= image_tag "logoweb.png" %>
      </figure>
    </figure>
    <h1>
      The most hackable chat on the internet
    </h1>

  </section>

  <section class="form-field">

    <form class="login-form" action="<%= user_session_path %>" method="post">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <h2>Login</h2>

      <div class="input-container">
        <label>
          <input required name="user[email]" type="text"/>
          <span>
            Username
          </span>
          <div class="input-line"></div>
        </label>
      </div>

      <div class="input-container">
        <label>
          <input required name="user[password]" type="password" />
          <span>
            Password
          </span>
          <div class="input-line"></div>
        </label>
      </div>

      <button type="submit" name="submit">
        Enter
      </button>
    </form>


    <form class="register-form" action="<%= user_registration_path %>" method="post">

      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <h2>Start now</h2>
      <div class="input-container">
        <label>
          <input name="user[email]" type="email" />
          <span>
            My email
          </span>
          <div class="input-line"></div>
        </label>

      </div>

      <div class="input-container">
        <label>
          <input required name="user[username]" type="text"/>
          <span>
            Hi! my username is
          </span>
          <div class="input-line"></div>
        </label>
      </div>

      <div class="input-container">
        <label>
          <input required name="user[password]" type="password" />
          <span>
            My password is
          </span>
          <div class="input-line"></div>
        </label>
      </div>

      <button type="submit" name="submit">
        Register
      </button>
    </form>


  </section>





  <script type="text/javascript">


    // this is for the label animation
    var inputs_quantity= document.querySelectorAll('.input-container  input');

    //when it loads
    function loadLabel(){

      for(n=0; n<inputs_quantity.length; n++){
        var inputs= document.querySelectorAll('.input-container  input');
          if(inputs[n].value != ""){
            inputs[n].nextElementSibling.setAttribute('class', 'quiet-label');
          }
          else{
            inputs[n].nextElementSibling.setAttribute('class', '');
          }
        }
    }
    loadLabel();



    for(n=0; n<inputs_quantity.length; n++){
      var inputs= document.querySelectorAll('.input-container  input');
      function evalContent(){

        if(this.value !== ""){
          this.nextElementSibling.setAttribute('class', 'quiet-label');
        }

        else{
          this.nextElementSibling.setAttribute('class', '');
        }
      }
      inputs[n].onchange= evalContent;
    }
  </script>
</main>
